{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "g++ build active file",
			"command": "/usr/bin/g++",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"${workspaceFolder}/source/*.cpp",
				"-I", "${workspaceFolder}/include",
				"-o",
				"${workspaceFolder}/out/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${workspaceFolder}/out"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: /usr/bin/g++"
		}
	]
}